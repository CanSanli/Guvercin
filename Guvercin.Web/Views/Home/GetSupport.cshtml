
@{
    ViewBag.Title = "GetSupport";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Harita ve Konum Formu</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #map {
            height: 500px;
        }

        .form-container {
            padding: 20px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div id="map"></div>
            </div>
            <div class="col-md-4 form-container">
                <h3>Konum Bilgileri</h3>
                <form id="locationForm">
                    <div class="form-group">
                        <label for="latitude">Enlem</label>
                        <input type="text" class="form-control" id="latitude" placeholder="Enlem">
                    </div>
                    <div class="form-group">
                        <label for="longitude">Boylam</label>
                        <input type="text" class="form-control" id="longitude" placeholder="Boylam">
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama</label>
                        <input type="text" class="form-control" id="description" placeholder="Açıklama">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="addMarker()">Pin Ekle</button>
                    <button type="button" class="btn btn-danger" onclick="removeLastMarker()">Son Pini Sil</button>
                    <button type="button" class="btn btn-warning" onclick="clearAllMarkers()">Tüm Pinleri Sil</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        // Leaflet Harita Ayarları
        var map = L.map('map').setView([39.9334, 32.8597], 6); // Türkiye merkezli başlangıç noktası
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Pinleri saklamak için dizi
        var markers = [];

        // Pin Ekleme Fonksiyonu
        function addMarker() {
            var lat = document.getElementById('latitude').value;
            var lon = document.getElementById('longitude').value;
            var description = document.getElementById('description').value;

            if (lat && lon) {
                var marker = L.marker([lat, lon]).addTo(map)
                    .bindPopup(description + '<br><button onclick="removeMarker(this)">Sil</button>');
                markers.push(marker);
                map.setView([lat, lon], 13);
            } else {
                alert("Lütfen geçerli bir enlem ve boylam giriniz.");
            }
        }

        // Marker silme fonksiyonu
        function removeMarker(button) {
            var marker = markers.find(m => m.getPopup().getContent().includes(button.outerHTML));
            if (marker) {
                map.removeLayer(marker);
                markers = markers.filter(m => m !== marker);
            }
        }

        // Son Eklenen Pini Silme Fonksiyonu
        function removeLastMarker() {
            if (markers.length > 0) {
                var lastMarker = markers.pop();
                map.removeLayer(lastMarker);
            } else {
                alert("Silinecek pin yok.");
            }
        }

        // Tüm Pinleri Silme Fonksiyonu
        function clearAllMarkers() {
            markers.forEach(function (marker) {
                map.removeLayer(marker);
            });
            markers = [];
        }
    </script>

</body>
</html>

